<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_illus"/>
    <Button
        android:id="@+id/fbBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:elevation="@dimen/cardview_default_radius"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/btn_designe"
        android:text="LogIn With Facebook"/>
    <TextView
        android:gravity="center"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="By Clicking on Login,You are accepting our terms and condition"
        android:layout_below="@+id/fbBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textSize="17sp"
        android:id="@+id/text"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bottom_circle"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>